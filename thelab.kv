Leconjugueur:

<Leconjugueur>:
	#canvas.before:
		#Color:
		#	rgba: 1, 1, 1, 0
		#Rectangle:
			#pos: self.pos
			#size: self.size
	orientation: "vertical"
	#spacing: "10dp"
	BoxLayout:
		orientation: "vertical"
		Label:
			#canvas.before:
			#	Color:
			#		rgba: 0, 0, 0, 1
			#	Rectangle:
			#		pos: self.pos
			#		size: self.size
			text: "Le Conjugueur"
			font_size: 40
			color: "00FFCE"
			background_color:"00FFCE"
			#size_hint: 0.5, 0.5
			#pos_hint: {"x": 0.2}
		
        BoxLayout:
            #orientation: "horizontal"

            TextInput:
                id: name_input
                text: "aimer"
                size_hint: .5, 0.6
                text_validate_unfocus: False
                focus: True
                multiline: False
                on_text_validate: root.conjugate_first_group_verbs_in_simple_present()

            #Label:
            #    width: .3


        BoxLayout:
            Button:
                id: e_acute_accent
                on_press: name_input.focus=True
                text: "é"
                font_size: "20dp"
                size_hint: "1dp", ".5dp"
                on_release: root.special_characters("é")
            Button:
                text: "ê"
                font_size: "20dp"
                size_hint: "1dp", ".5dp"
                on_press: root.special_characters("ê")
            Button:
                text: "î"
                font_size: "20dp"
                size_hint: "1dp", ".5dp"
                on_press: root.special_characters("î")
            Button:
                text: "â"
                font_size: "20dp"
                size_hint: "1dp", ".5dp"
                on_press: root.special_characters("â")

            Button:
                text: "û"
                font_size: "20dp"
                size_hint: "1dp", ".5dp"
                on_press: root.special_characters("û")

            Button:
                text: "ô"
                font_size: "20dp"
                size_hint: "1dp", ".5dp"
                on_press: root.special_characters("ô")

            Button:
                text: "ï"
                font_size: "20dp"
                size_hint: "1dp", ".5dp"
                on_press: root.special_characters("ï")

            Button:
                text: "ç"
                font_size: "20dp"
                size_hint: "1dp", ".5dp"
                on_press: root.special_characters("ç")


		BoxLayout:
			ToggleButton:
				id: mode_indicatif
				text: "Indicatif"
				font_size: "20dp"
				color: 1, 0, 1, 1
				background_color: "FF0FCF"
				#size_hint: 0.5, 0.5
				#state: "down"
				on_state: root.mode_indicatif_control(self)
				

			ToggleButton:
				id: infinitif
				text: "Infinitif"
				font_size: "20dp"
				color: 1, 0, 1, 1
				background_color: "FF0FCF"
				#size_hint: 0.5, 0.5
				on_state: root.infinitive()

    BoxLayout:
        #orientation: "horizontal"
        Label:
            id: name_label
            markup: True
            text: "Tableau d'affichage"
            #text_size: self.size
            size_hint: None, 1
            size: self.texture_size
            #halign: "center"
            #valign: "middle"
            #multiline: True
            color: 1, 1, 1, 1#0, 0, 0, 1
            font_size: 29
            #pos: "100dp", "100dp"



	
	BoxLayout:
		orientation: "vertical"
		BoxLayout:
			orientation: "horizontal"
			BoxLayout:
				orientation: "vertical"
				Button:
					id: my_present
					text: "Présent"
					font_size: "20dp"
					#color: 1, 0, 1, 1
					background_color: "FF0FCF"
					#size_hint: 1, 0.4
					#disabled: True
					on_state: root.conjugate_first_group_verbs_in_simple_present()
				Button:
					id: my_imparfait
					text: "Imparfait"
					background_color: "FF00CE"
					font_size: "20dp"
					#size_hint: 1, 0.4
					#color: 0, 0, 1, 1
					#pos_hint: {"center_x": .5}
					on_press: root.conjugate_first_group_verbs_in_imparfait() 
					# disabled: False
				Button:
					id: my_simple_past
					text:"Passé simple"
					font_size: "20dp"
					#color: 1, 0, 1, 1
					background_color: "FF0FCF"
					on_press: root.conjugate_first_group_verbs_in_simple_past()

				Button:
					text: "Futur simple"
					font_size: "20dp"
					# color: 1, 0, 1, 1
					background_color: "FF0FCF"
					on_press: root.conjugate_first_group_verbs_in_simple_future()

			BoxLayout:
				orientation: "vertical"
				Button:
					text: " Passé composé"
					font_size: "20dp"
					#color: 1, 0, 1, 1
					background_color: "FF0FCF"
					on_press: root.present_perfect()

				Button:
					text: "Plus-que-parfait"
					font_size: "20dp"
					#color: 1, 0, 1, 1
					background_color: "FF0FCF"
					on_press: root.past_perfect()
				Button:
					text: "Passé antérieur"
					font_size: "20dp"
					#color: 1, 0, 1, 1
					background_color: "FF0FCF"
					on_press: root.passeAnterieur()

				Button:
					text: "Futur antérieur"
					font_size: "20dp"
					#color: 1, 0, 1, 1
					background_color: "FF0FCF"
					on_press: root.futurePerfect()
		
