		#	text: "conjugue"
		#	bold: True
		#	background_color: "FF00FC"#"#00FFCE"
		#	font_size: "30dp"
		#	#color: 0, 0, 1, 1
		#	#size_hint: "50dp", None
		#	pos_hint: {"center_x": .5}
		#	on_press: root.indicatif_enabled#root.conjugate_first_group_verbs_in_simple_present()
		#	#disabled: True